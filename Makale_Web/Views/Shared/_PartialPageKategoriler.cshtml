@using Makale_BusinessLayer
@using Makale_Entities
@{ 
    KategoriYonet ky = new KategoriYonet();
    List<Kategori> kategoriler=ky.Listele();
}

<p class="lead">Kategoriler</p>
<div class="list-group">

    <a href="/Home/Index" class="list-group-item"><span class="glyphicon glyphicon-arrow-right"></span>Tümü</a>

    @foreach (Kategori item in kategoriler)
    {
        <a href="/Home/Kategori/@item.Id" class="list-group-item"><span class="glyphicon glyphicon-arrow-right"></span> @item.Baslik </a>
    }

</div>
